@import "../../styles/sideSteps.wxss";
.scroll-steps-container {
    position: relative;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: start;
    min-height: 100vh;
}
.scroll-steps-title {
    box-sizing: border-box;
    width: 100%;
    font-size: 20px;
    font-weight: 500;
    text-align: center;
    margin: 16px auto 24px;
}
.main-container {
    box-sizing:border-box;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
    margin:0 0 0 70px;
    width:calc(100vw - 70px);
    min-height: 100vh;
}

.side-steps-container {
    box-sizing:border-box;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    width: 70px;
    height: 100vh;
    background: rgba(0, 0, 0, .01);
}

.step-content {
    box-sizing:border-box;
    position: relative;
    width: 100%;
    height: 1600px;
    border-bottom: 2px solid #DDD;
}
.step-content:last-child {
    border-bottom: none;
}

.step-content-title {
    box-sizing:border-box;
    position: sticky;
    top: 0;
    display: block;
    width: 100%;
    padding: 15px;
    font-size: 18px;
    color: #333;
    text-align: center;
    background: #DDD;
}