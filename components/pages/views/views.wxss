@import "../../styles/base.wxss";

.components-item {
    position: relative;
    display: block;
    margin: 0 auto 30px;
    width: 100%;
}

.components-item-message {
    position: relative;
    display: block;
    font-size: 12px;
    text-align: left;
    padding: 5px;
    margin: 0;
    color: #333;
    border: 1px solid #333;
    border-radius: 3px;
}

.components-views-movable-area {
    position: relative;
    display: block;
    margin: 16px auto;
    width: 280px;
    height: 160px;
    border: 1px solid #333;
}
.components-views-movable-item {
    position: relative;
    display: block;
    margin: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: rgba(0, 0, 30, .15);
}

.components-views-movable-item.on-move {
    background-color: rgba(0, 100, 200, 1);
}

.components-views-movable-item.out-of-bounds {
    background-color: rgba(150, 0, 0, 1) !important;
}

.components-views-scroll-area {
    position: relative;
    display: block;
    margin: 16px auto;
    width: 280px;
    height: 160px;
    border: 1px solid #333;
}

.components-views-scroll-contents {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
    width: 100%;
}

.components-views-scroll-content-upper {
    position: relative;
    display: block;
    width: 100%;
    height: 200px;
    line-height: 200px;
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    color: #FFF;
    background-color: rgba(0, 0, 0, .1);
}
.components-views-scroll-content-center {
    position: relative;
    display: block;
    width: 100%;
    height: 600px;
    line-height: 600px;
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    color: #333;
    background-color: rgba(0, 0, 0, 0);
}
.components-views-scroll-content-lower {
    position: relative;
    display: block;
    width: 100%;
    height: 200px;
    line-height: 200px;
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    color: #FFF;
    background-color: rgba(0, 0, 0, .1);
}

.components-views-swiper-area {
    position: relative;
    display: block;
    margin: 16px auto;
    width: 280px;
    height: 160px;
    border: 1px solid #333;
}
.components-views-swiper-item {
    position: relative;
    width: 280px;
    height: 160px;
    background-color: rgba(0, 0, 0, .1);
    line-height: 160px;
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    color: #FFF;
}

.testBtn {
    position: fixed;
    padding: 0;
    margin: 0;
    bottom: 32px;
    right: 32px;
    width: 60px;
    height: 30px;
    border-radius: 5px;
    border: none;
    background: #333;
    color: #FFF;
    text-align: center;
    line-height: 30px;
    font-size: 20px;
    opacity: 1;
    z-index: 100;
}
.testBtn:hover {
    opacity: .8;
}