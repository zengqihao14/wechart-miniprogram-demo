.navigator-area {
    box-sizing: border-box;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
    width: 100%;
}
.components-navigator {
    box-sizing: border-box;
    margin: 5px 0;
    width: 100%;
    padding: 10px;
    background-color: #FFF;
    border: 0 solid transparent;
    border-radius: 5px;
    box-shadow: 5px 5px 15px -4px rgba(0, 0, 0, .1);
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    color: #333;
    line-height:1.4;
}